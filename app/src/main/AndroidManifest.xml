<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkdevs.bibleQuiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp"
        android:usesCleartextTraffic="true">
        <activity android:name="com.thinkdevs.bibleQuiz.main.MainActivity"/>
        <activity
            android:name="com.thinkdevs.bibleQuiz.splash.SpashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.QuizApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8831705983843599~9943808630" />
    </application>

</manifest>